<Window x:Class="Chucksoft.Client.UserControls.Authentication"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Credentials" Height="300" Width="300">
    <Grid Width="267">
        <TextBox Height="23" Margin="10,39,44,0" Name="usernameTextBox" VerticalAlignment="Top" />
        <Label Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" Width="120">Username</Label>
        <Label Height="23" HorizontalAlignment="Left" Margin="10,85,0,0" Name="label2" VerticalAlignment="Top" Width="120">Password</Label>
        <Button ClipToBounds="True" Height="23" HorizontalAlignment="Left" Margin="12,0,0,80" Name="SaveButton" VerticalAlignment="Bottom" Width="48" Click="SaveButton_Click">Save</Button>
        <Label Height="25" Margin="12,0,44,49" Name="messageLabel" VerticalAlignment="Bottom" />
        <PasswordBox Margin="10,114,44,125" Name="passwordTextBox" />
    </Grid>
</Window>
